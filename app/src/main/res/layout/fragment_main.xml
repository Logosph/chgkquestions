<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.MainFragment">

    <Button
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:id="@+id/favorite_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"

        android:textAppearance="@style/button_style"
        android:gravity="start|center_vertical"
        android:text="Избранное"


        app:icon="@drawable/baseline_favorite_48"
        app:iconSize="30sp"
        app:iconTint="#FF0000"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:id="@+id/find_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"

        android:gravity="start|center_vertical"
        android:text="Найти вопросы"
        android:textAppearance="@style/button_style"

        app:icon="@drawable/baseline_search_24"
        app:iconSize="30sp"
        app:iconTint="#0000FF"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/favorite_button" />

    <Button
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:id="@+id/create_training"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"

        android:gravity="start|center_vertical"
        android:text="Составить тренировку"
        android:textAppearance="@style/button_style"

        app:icon="@drawable/baseline_edit_note_24"
        app:iconSize="30sp"
        app:iconTint="#00C800"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/find_questions" />


</androidx.constraintlayout.widget.ConstraintLayout>